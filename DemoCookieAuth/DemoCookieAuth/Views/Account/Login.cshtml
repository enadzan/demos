@model SignInModel
@{
    ViewData["Title"] = "Sign in";

    var returnUrl = Context.Request.Query["ReturnUrl"];
}

<div class="text-center">
    <h1>Sign-in</h1>
    
    <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto text-center p-4">
        <form class="justify-content-center" asp-action="Login" asp-route-returnurl="@returnUrl" method="post">
            <!-- Input and Submit elements -->
            <div class="form-group">
                <label asp-for="Username">Username:</label>
                <input class="form-control" asp-for="Username"/>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Password:</label>
                <input class="form-control" asp-for="Password"/>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input class="form-check-input" asp-for="RememberMe"/>
                <label asp-for="RememberMe">Remember Me</label>
            </div>
            <button class="btn btn-primary" type="submit">Sign In</button>
        </form>
    </div>

</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
